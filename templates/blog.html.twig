{% embed 'partials/base.html.twig' %}

{% set collection = page.collection() %}
{% set base_url = page.url %}
{% set feed_url = base_url %}

{% if base_url == '/' %}
{% set base_url = '' %}
{% endif %}

{% if base_url == base_url_relative %}
{% set feed_url = base_url~'/'~page.slug %}
{% endif  %}

{% block content %}

<div class="blog_page_titles">
  <div class="row blog_page_titles">
    <div class="large-12 columns">
      {{ page.content }}
    </div>
  </div>
</div>

<div class="content-wrapper blog-content-list g-grid pure-g-r">
  <div id="listing" class="g-block pure-u-2-3">
    {% for child in collection %}
    <div class="row">
      {% include 'partials/blog_item.html.twig' with {'page':child, 'truncate':true} %}
    </div>
    {% endfor %}

    {% if config.plugins.pagination.enabled and collection.params.pagination %}
      {% include 'partials/pagination.html.twig' with {'pagination':collection.params.pagination} %}
    {% endif %}
  </div>
  <div id="sidebar" class="g-block size-1-3 pure-u-1-3">
    {% include 'partials/sidebar.html.twig' %}
  </div>
</div>
{% endblock %}

{% endembed %}
